<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemePink" parent="AppTheme">
        <item name="colorTitleText">@color/colorPinkTitleText</item>
    </style>
    <style name="ThemeNight" parent="AppTheme">
        <item name="colorTitleText">@color/colorNightTitleText</item>
    </style>
    <style name="ThemeBlue" parent="AppTheme">
        <item name="colorTitleText">@color/colorBlueTitleText</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
